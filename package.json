{
  "name": "slidesdown",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "main": "index.js",
  "scripts": {
    "analyze": "npm run build -s -- --profile --json > stats.json && webpack-bundle-analyzer stats.json dist",
    "build": "NODE_ENV=production webpack",
    "deploy": "npm run build && firebase deploy",
    "format": "prettier --write '**/*.{md,js,json}'",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint .",
    "lint:css": "stylelint './src/**/*.js'",
    "start": "webpack-dev-server --hot",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "slides",
    "slideshow",
    "powerpoint",
    "markdown"
  ],
  "author": "tu4mo",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.1",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-config-standard-react": "^6.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-standard": "^3.1.0",
    "file-loader": "^1.1.11",
    "firebase-tools": "^3.18.5",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^22.4.3",
    "jest-styled-components": "^5.0.1",
    "prettier": "^1.12.1",
    "raw-loader": "^0.5.1",
    "react-test-renderer": "^16.3.2",
    "stylelint": "^9.2.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.3.1",
    "webpack": "^4.6.0",
    "webpack-bundle-analyzer": "^2.11.1",
    "webpack-cli": "^2.0.15",
    "webpack-dev-server": "^3.1.3"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "firebase": "^4.13.1",
    "lodash.throttle": "^4.1.1",
    "prismjs": "^1.14.0",
    "prop-types": "^15.6.1",
    "query-string": "^6.0.0",
    "react": "^16.3.2",
    "react-copy-to-clipboard": "^5.0.1",
    "react-dom": "^16.3.2",
    "react-full-screen": "^0.2.2",
    "react-hot-loader": "^4.1.2",
    "react-loadable": "^5.3.1",
    "react-markdown": "^3.3.0",
    "react-router-dom": "^4.2.2",
    "react-split-pane": "^0.1.77",
    "react-tippy": "^1.2.2",
    "styled-components": "^3.2.6",
    "unistore": "^3.0.4",
    "uuid": "^3.2.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "moduleNameMapper": {
      "\\.(svg)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "setupFiles": [
      "<rootDir>/__mocks__/localStorage.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tu4mo/slidesdown.git"
  }
}
